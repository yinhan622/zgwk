/* 当前商品信息 */
.shop{display:flex;position:relative;padding:18rpx;border: 1rpx solid #ddd;}
/* 当前商品信息-图片*/
.shop-img{width: 160rpx;height: 160rpx;margin-right: 16rpx;}
/* 当前商品信息-店铺信息 */
.shop-info{width: 570rpx;font-size: 12px;color:#666;display: flex;flex-direction: column;line-height: 1.5;}
/* 当前商品信息-店铺名称 */
.shop-title{font-size:14px;color:#333;}
/* 当前商品信息 -打分*/
.shop-star{position: absolute;right: 20rpx;top:20rpx;}
.shop-after{color:#e2e2e2;}
.shop-before{position: absolute;top: 0;left: 0;width: 75%;overflow: hidden;color: #f19e38;}